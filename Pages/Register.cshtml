@page
@model LoginPanel.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<meta charset="utf-8" />
<title>Login panel - register</title>
<meta name="description" content="ASP.Net login panel test" />
<meta name="keywords" content="login, panel, register, test, asp, net" />
<meta name="author" content="Kazu" />
<link rel="shortcut icon" type="image/png" href="~/favicon.ico" />
<link rel="stylesheet" type="text/css" href="~/css/site.css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<style>
    a {
        color: #101010;
    }
    a:link {
        text-decoration: none;
    }
    a:hover {
        text-decoration: none;
        color: #212121;
    }
    a:visited {
        text-decoration: none;
    }
    a:active {
        text-decoration: none;
    }
</style>
<body style="display: none;">
    <form method="post" asp-page="Register">
        <script>$('body').fadeIn(1000);</script>
        <center>
            <div id="container">
                <header>
                    <div>Register panel</div>
                </header>
                <content>
                    <div class="box col-sm-1" style="color: green;">@Model.Message</div>
                    <br />
                    <br />
                    <div class="text">Username </div>
                    <br />
                    <br />
                    <input id="Text1" type="text" class="box" asp-for="@Model.Username" />
                    <br />
                    <br />
                    <div class="text">Password</div>
                    <br />
                    <input id="Password1" type="password" class="box" asp-for="@Model.Password" />
                    <br />
                    <br />
                    <br />
                    <input id="Submit1" class="box" type="submit" value="Register" />
                    <br />
                    <br />
                    @Html.Hidden("RedirectTo", Url.Action("ActionName", "ControllerName"));
                    <a class="box" href="Index">Back to login panel</a>
                </content>
            </div>
        </center>
    </form>
</body>

@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
<title>Login panel - login</title>
<meta name="description" content="ASP.Net login panel test" />
<meta name="keywords" content="login, panel, register, test, asp, net" />
<meta name="author" content="Kazu" />
<link rel="shortcut icon" type="image/png" href="~/favicon.ico" />
<link rel="stylesheet" type="text/css" href="~/css/site.css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<style>
    a {
        color: #101010;
    }
    a:link {
        text-decoration: none;
    }
    a:hover {
        text-decoration: none;
        color: #212121;
    }
    a:visited {
        text-decoration: none;
    }
    a:active {
        text-decoration: none;
    }
</style>
<body style="display: none;">
    <form method="post" asp-page="Index">
        <script>
            $('body').fadeIn(1000);
        </script>
        <center>
            <div class="container">
                <header>
                    <div>Login panel</div>
                </header>
                <div class="row">
                    <content>
                        <div class="box col-sm-1" style="color: red;">@Model.Message</div>
                        <div class="text col-sm-4">
                            Username
                            <br />
                            <input id="Text1" type="text" class="box" asp-for="@Model.Username" />
                        </div>
                        <br />
                        <br />
                        <div class="text col-sm-4">
                            Password
                            <br />
                            <input id="Password1" type="password" class="box" asp-for="@Model.Password" />
                        </div>
                        <br />
                        <br />
                        <br />
                        <input id="Submit1" class="box" type="submit" value="Login" />
                        <br />
                        <br />
                        <a class="box" href="Register">Don't have an account?</a>
                    </content>
                 </div>
            </div>
</center>
    </form>
</body>

@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<meta charset="utf-8" />
<title>Login panel</title>
<meta name="description" content="ASP.Net login panel test" />
<meta name="keywords" content="login, panel, test, asp, net" />
<meta name="author" content="Kazu" />
<link rel="shortcut icon" type="image/png" href="~/favicon.ico" />
<link rel="stylesheet" type="text/css" href="~/css/site.css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<body style="display: none;">
    <form method="post" asp-page="Index">
        <script>
            $('body').fadeIn(1000);
        </script>
        <center>
            <div id="container">
                <header>
                    <div>Login panel</div>
                </header>
                <content>
                    <div class="box" style="color: red;">@Model.Message</div>
                    <br />
                    <div class="text">Username </div>
                    <br />
                    <input id="Text1" type="text" class="box" asp-for="@Model.Username" />
                    <br />
                    <br />
                    <div class="text">Password</div>
                    <br />
                    <input id="Password1" type="password" class="box" asp-for="@Model.Password" />
                    <br />
                    <br />
                    <br />
                    <input id="Submit1" class="box" type="submit" value="Login" />
                </content>
            </div>
        </center>
    </form>
</body>
